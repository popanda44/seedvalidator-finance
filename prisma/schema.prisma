// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// ==========================================
// Authentication Models (NextAuth)
// ==========================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// Core Application Models
// ==========================================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  password      String?   // For credentials auth
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  company       Company?  @relation(fields: [companyId], references: [id])
  companyId     String?
  role          UserRole  @default(MEMBER)
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([companyId])
  @@index([email])
}

model Company {
  id              String              @id @default(uuid())
  name            String
  industry        String?
  stage           CompanyStage?
  foundingDate    DateTime?           @db.Date
  fiscalYearEnd   DateTime?           @db.Date
  fiscalYearStart Int                 @default(1) // Month 1-12
  currencyCode    String              @default("USD") @db.Char(3)
  timezone        String              @default("America/New_York")
  
  // Relations
  users           User[]
  bankAccounts    BankAccount[]
  transactions    Transaction[]
  categories      Category[]
  departments     Department[]
  customers       Customer[]
  revenueStreams  RevenueStream[]
  snapshots       FinancialSnapshot[]
  alerts          Alert[]
  forecasts       Forecast[]
  plaidItems      PlaidItem[]
  integrations    Integration[]
  
  // Settings
  alertSettings   Json?
  
  // Timestamps
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
}

model PlaidItem {
  id              String        @id @default(uuid())
  company         Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId       String
  plaidItemId     String        @unique
  accessToken     String        @db.Text
  institutionId   String?
  institutionName String?
  status          PlaidItemStatus @default(ACTIVE)
  lastSyncedAt    DateTime?
  cursor          String?       // For transaction sync
  
  // Relations
  bankAccounts    BankAccount[]
  
  // Timestamps
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([companyId])
}

model BankAccount {
  id              String        @id @default(uuid())
  company         Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId       String
  plaidItem       PlaidItem?    @relation(fields: [plaidItemId], references: [id])
  plaidItemId     String?
  plaidAccountId  String?       @unique
  
  // Account Info
  name            String
  officialName    String?
  type            AccountType
  subtype         String?
  mask            String?       // Last 4 digits
  
  // Balances (using Decimal for precision)
  currentBalance  Decimal       @default(0) @db.Decimal(15, 2)
  availableBalance Decimal?     @db.Decimal(15, 2)
  limitBalance    Decimal?      @db.Decimal(15, 2) // For credit cards
  currency        String        @default("USD") @db.Char(3)
  
  // Status
  isActive        Boolean       @default(true)
  lastSyncedAt    DateTime?
  
  // Relations
  transactions    Transaction[]
  
  // Timestamps
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([companyId])
  @@index([plaidAccountId])
}

model Transaction {
  id                  String        @id @default(uuid())
  company             Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId           String
  bankAccount         BankAccount   @relation(fields: [bankAccountId], references: [id], onDelete: Cascade)
  bankAccountId       String
  category            Category?     @relation(fields: [categoryId], references: [id])
  categoryId          String?
  
  // Plaid Data
  plaidTransactionId  String?       @unique
  
  // Transaction Details
  date                DateTime      @db.Date
  name                String        // Merchant name
  merchantName        String?
  amount              Decimal       @db.Decimal(15, 2) // Positive = expense, Negative = income
  isoCurrencyCode     String?
  pending             Boolean       @default(false)
  isRecurring         Boolean       @default(false)
  
  // Categorization
  plaidCategory       String[]      // Original Plaid categories
  isManualCategory    Boolean       @default(false)
  
  // Additional Info
  paymentChannel      String?       // online, in_store, etc.
  transactionType     String?       // place, digital, special, etc.
  notes               String?
  metadata            Json?         // Flexible metadata storage
  
  // Timestamps
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  @@index([companyId, date(sort: Desc)])
  @@index([categoryId])
  @@index([bankAccountId])
  @@index([date(sort: Desc)])
}

model Category {
  id              String        @id @default(uuid())
  company         Company?      @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId       String?       // null = system default category
  department      Department?   @relation(fields: [departmentId], references: [id])
  departmentId    String?
  
  name            String
  slug            String
  description     String?
  icon            String?       // Lucide icon name
  color           String?       // Hex color
  
  // Budget (for expense tracking)
  budgetAmount    Decimal?      @db.Decimal(15, 2)
  
  // Hierarchy
  parentId        String?
  parent          Category?     @relation("CategoryToCategory", fields: [parentId], references: [id])
  children        Category[]    @relation("CategoryToCategory")
  
  // Type
  type            CategoryType  @default(EXPENSE)
  isSystem        Boolean       @default(false) // System categories can't be deleted
  
  // Relations
  transactions    Transaction[]
  
  // Timestamps
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([companyId, slug])
  @@index([companyId])
  @@index([type])
}

model Department {
  id              String        @id @default(uuid())
  company         Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId       String
  
  name            String
  code            String?       // Short code like "ENG", "MKT"
  budgetAmount    Decimal?      @db.Decimal(15, 2)
  headcount       Int?
  
  // Relations
  categories      Category[]
  
  // Timestamps
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([companyId, name])
  @@index([companyId])
}

model Customer {
  id              String          @id @default(uuid())
  company         Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId       String
  
  name            String
  email           String?
  externalId      String?         // ID from CRM or billing system
  
  // Lifecycle
  status          CustomerStatus  @default(ACTIVE)
  acquiredAt      DateTime?
  churnedAt       DateTime?
  
  // Revenue
  lifetimeValue   Decimal?        @db.Decimal(15, 2)
  
  // Relations
  revenueStreams  RevenueStream[]
  
  // Timestamps
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@unique([companyId, externalId])
  @@index([companyId])
  @@index([status])
}

model RevenueStream {
  id                  String        @id @default(uuid())
  company             Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId           String
  customer            Customer?     @relation(fields: [customerId], references: [id])
  customerId          String?
  
  // Revenue Details
  sourceType          RevenueSourceType
  amount              Decimal       @db.Decimal(15, 2)
  currency            String        @default("USD") @db.Char(3)
  
  // Booking & Recognition (for ASC 606 compliance)
  bookingDate         DateTime      @db.Date
  recognitionStart    DateTime?     @db.Date
  recognitionEnd      DateTime?     @db.Date
  
  // Subscription Details (if applicable)
  isRecurring         Boolean       @default(false)
  recurringInterval   RecurringInterval?
  contractValue       Decimal?      @db.Decimal(15, 2)
  
  // Status
  status              RevenueStatus @default(ACTIVE)
  
  // Metadata
  description         String?
  externalId          String?       // ID from billing system
  metadata            Json?
  
  // Timestamps
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  @@index([companyId, bookingDate(sort: Desc)])
  @@index([customerId])
  @@index([sourceType])
}

model FinancialSnapshot {
  id              String        @id @default(uuid())
  company         Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId       String
  
  // Snapshot Date
  date            DateTime      @db.Date
  
  // Cash Metrics
  totalCash       Decimal       @db.Decimal(15, 2)
  cashChange      Decimal?      @db.Decimal(15, 2) // Change from previous period
  
  // Burn Metrics
  grossBurn       Decimal       @db.Decimal(15, 2)
  netBurn         Decimal       @db.Decimal(15, 2)
  runway          Decimal       @db.Decimal(5, 1) // In months
  
  // Revenue Metrics
  revenue         Decimal?      @db.Decimal(15, 2)
  mrr             Decimal?      @db.Decimal(15, 2)
  arr             Decimal?      @db.Decimal(15, 2)
  revenueGrowth   Decimal?      @db.Decimal(5, 2) // MoM growth rate as percentage
  
  // Expense Breakdown
  expensesByCategory Json?      // { categorySlug: amount }
  
  // Timestamps
  createdAt       DateTime      @default(now())
  
  @@unique([companyId, date])
  @@index([companyId, date(sort: Desc)])
}

model Forecast {
  id                      String        @id @default(uuid())
  company                 Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId               String
  
  name                    String
  type                    ForecastType
  modelVersion            String?       // Model/algorithm version used
  isActive                Boolean       @default(true)
  
  // Forecast Parameters
  predictionDate          DateTime      @db.Date
  startDate               DateTime
  endDate                 DateTime
  method                  ForecastMethod @default(LINEAR)
  
  // Prediction Values
  predictedValue          Decimal?      @db.Decimal(15, 2)
  confidenceIntervalLower Decimal?      @db.Decimal(15, 2)
  confidenceIntervalUpper Decimal?      @db.Decimal(15, 2)
  confidenceScore         Decimal?      @db.Decimal(3, 2) // 0.00 to 1.00
  
  // Forecast Data
  projections             Json          // Array of { date, amount, confidence }
  assumptions             Json?         // User-defined assumptions
  
  // Timestamps
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt

  @@index([companyId, predictionDate(sort: Desc)])
  @@index([type])
}

model Alert {
  id              String        @id @default(uuid())
  company         Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId       String
  
  type            AlertType
  severity        AlertSeverity
  title           String
  message         String        @db.Text
  data            Json?         // Additional context
  
  // Status
  isRead          Boolean       @default(false)
  isDismissed     Boolean       @default(false)
  readAt          DateTime?
  dismissedAt     DateTime?
  
  // Trigger Info
  triggeredAt     DateTime      @default(now())
  
  // Notifications
  emailSent       Boolean       @default(false)
  emailSentAt     DateTime?
  
  // Timestamps
  createdAt       DateTime      @default(now())
  
  @@index([companyId, triggeredAt(sort: Desc)])
  @@index([companyId, isRead])
  @@index([severity])
}

model Integration {
  id                  String            @id @default(uuid())
  company             Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId           String
  
  integrationType     IntegrationType
  credentials         Json?             // Encrypted credentials
  accessToken         String?           @db.Text
  refreshToken        String?           @db.Text
  tokenExpiresAt      DateTime?
  
  // Sync Status
  status              IntegrationStatus @default(PENDING)
  lastSyncAt          DateTime?
  lastSyncError       String?
  
  // Configuration
  config              Json?             // Integration-specific settings
  
  // Timestamps
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt

  @@unique([companyId, integrationType])
  @@index([companyId])
  @@index([status])
}

// ==========================================
// Enums
// ==========================================

enum UserRole {
  OWNER     // Full access, billing management
  ADMIN     // Full access except billing
  FINANCE   // Financial data access
  MEMBER    // Limited access
  VIEWER    // Read-only access
}

enum CompanyStage {
  PRE_SEED
  SEED
  SERIES_A
  SERIES_B
  SERIES_C
  GROWTH
  PROFITABLE
}

enum AccountType {
  CHECKING
  SAVINGS
  CREDIT
  DEPOSITORY    // Generic checking/savings
  INVESTMENT    // Brokerage, 401k
  LOAN          // Mortgage, Student
  OTHER
}

enum PlaidItemStatus {
  ACTIVE
  PENDING
  ERROR
  DISCONNECTED
}

enum CategoryType {
  INCOME
  EXPENSE
  TRANSFER
}

enum CustomerStatus {
  PROSPECT
  ACTIVE
  CHURNED
  PAUSED
}

enum RevenueSourceType {
  SUBSCRIPTION      // Recurring SaaS revenue
  ONE_TIME          // One-time purchases
  USAGE_BASED       // Metered/usage-based billing
  PROFESSIONAL_SERVICES
  LICENSE
  OTHER
}

enum RecurringInterval {
  MONTHLY
  QUARTERLY
  ANNUAL
}

enum RevenueStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  PENDING
}

enum ForecastType {
  REVENUE
  EXPENSE
  CASH_FLOW
  HEADCOUNT
  RUNWAY
}

enum ForecastMethod {
  LINEAR
  EXPONENTIAL
  SEASONAL
  AI_POWERED
  MANUAL
}

enum AlertType {
  RUNWAY_CRITICAL     // < 6 months
  RUNWAY_WARNING      // < 9 months
  SPENDING_SPIKE      // > 50% increase
  LARGE_TRANSACTION   // > threshold
  PAYMENT_DUE         // Upcoming payment
  MILESTONE           // Achievement milestones
  SYNC_ERROR          // Bank sync failed
  WEEKLY_DIGEST       // Weekly summary
}

enum AlertSeverity {
  CRITICAL
  WARNING
  INFO
  SUCCESS
}

enum IntegrationType {
  PLAID
  QUICKBOOKS
  XERO
  SALESFORCE
  STRIPE
  HUBSPOT
  SLACK
}

enum IntegrationStatus {
  ACTIVE
  PENDING
  ERROR
  DISCONNECTED
}
