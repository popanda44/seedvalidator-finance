# Environment Variables
# Copy this file to .env.local and fill in the values

# ======================
# Application
# ======================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=SeedValidator Finance

# ======================
# Database
# ======================
DATABASE_URL="postgresql://user:password@localhost:5432/seedvalidator?schema=public"

# Redis (optional, for caching)
REDIS_URL="redis://localhost:6379"

# ======================
# Authentication
# ======================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-generate-with-openssl-rand-base64-32

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ======================
# AI Services
# ======================
OPENAI_API_KEY=

# ======================
# Financial Integrations
# ======================

# Plaid (Bank Connections)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox # sandbox, development, or production

# Stripe (Payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# QuickBooks Integration
QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=
QUICKBOOKS_REDIRECT_URI=

# Xero Integration
XERO_CLIENT_ID=
XERO_CLIENT_SECRET=

# ======================
# Email
# ======================
RESEND_API_KEY=
EMAIL_FROM=noreply@seedvalidator.finance

# ======================
# Analytics
# ======================
POSTHOG_KEY=
POSTHOG_HOST=https://app.posthog.com

# ======================
# Error Tracking
# ======================
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# ======================
# Feature Flags
# ======================
ENABLE_AI_FEATURES=true
ENABLE_BANK_SYNC=true
ENABLE_INVESTOR_REPORTS=true

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ======================
# Security
# ======================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# ======================
# CRM Integrations
# ======================
# Salesforce
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_URL=https://login.salesforce.com

# HubSpot
HUBSPOT_ACCESS_TOKEN=
HUBSPOT_PORTAL_ID=

# ======================
# Webhooks
# ======================
PLAID_WEBHOOK_SECRET=

